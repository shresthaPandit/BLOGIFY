<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head")%>
    <style>
        .blog-content {
            max-width: 800px;
            margin: 0 auto;
        }
        .blog-image {
            width: 100%;
            max-height: 400px;
            object-fit: cover;
            border-radius: 8px;
            margin: 20px 0;
        }
        .author-info {
            display: flex;
            align-items: center;
            margin: 20px 0;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        .author-image {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }
        .comment-section {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #dee2e6;
        }
        .comment {
            padding: 15px;
            margin: 10px 0;
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        .comment-meta {
            font-size: 0.9em;
            color: #6c757d;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="blog-content">
            <!-- Author Info and Actions -->
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div class="author-info">
                    <img 
                        src="<%= blog.createdBy ? blog.createdBy.profileImage : '/images/default.avif' %>" 
                        alt="Author" 
                        class="author-image"
                        onerror="this.src='/images/default.avif'"
                    >
                    <div>
                        <h6 class="mb-0"><%= blog.createdBy ? blog.createdBy.fullName : 'Anonymous' %></h6>
                        <small class="text-muted">Posted on <%= new Date(blog.createdAt).toLocaleDateString() %></small>
                    </div>
                </div>
                <% if (user && blog.createdBy && user._id === blog.createdBy._id.toString()) { %>
                    <div class="blog-actions">
                        <button 
                            type="button" 
                            class="btn btn-danger" 
                            data-bs-toggle="modal" 
                            data-bs-target="#deleteModal"
                        >
                            Delete Blog
                        </button>
                    </div>
                <% } %>
            </div>

            <!-- Blog Content -->
            <h1 class="display-4 mb-4"><%= blog.title %></h1>
            <img 
                src="<%= blog.coverImageUrl.startsWith('http') ? blog.coverImageUrl : '/' + blog.coverImageUrl %>" 
                alt="cover image" 
                class="blog-image"
                onerror="this.src='/images/default.avif'"
            />
            <div class="lead mb-4"><%= blog.body %></div>

            <!-- Comments Section -->
            <div class="comment-section">
                <h3>Comments</h3>
                
                <% if (user) { %>
                    <!-- Comment Form -->
                    <form action="/comment/<%= blog._id %>" method="POST" class="mb-4">
                        <div class="mb-3">
                            <textarea 
                                class="form-control" 
                                name="content" 
                                rows="3" 
                                placeholder="Write your comment..."
                                required
                            ></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Comment</button>
                    </form>
                <% } else { %>
                    <div class="alert alert-info">
                        Please <a href="/user/signin">sign in</a> to leave a comment.
                    </div>
                <% } %>

                <!-- Comments List -->
                <% if (comments && comments.length > 0) { %>
                    <% comments.forEach(comment => { %>
                        <div class="comment">
                            <div class="comment-meta">
                                <img 
                                    src="<%= comment.createdBy ? comment.createdBy.profileImage : '/images/default.avif' %>" 
                                    alt="Commenter" 
                                    class="rounded-circle me-2"
                                    style="width: 24px; height: 24px;"
                                    onerror="this.src='/images/default.avif'"
                                >
                                <strong><%= comment.createdBy ? comment.createdBy.fullName : 'Anonymous' %></strong> â€¢ 
                                <%= new Date(comment.createdAt).toLocaleDateString() %>
                            </div>
                            <div class="mt-2"><%= comment.content %></div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">No comments yet. Be the first to comment!</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Blog Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this blog post? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/blog/<%= blog._id %>/delete" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("./partials/script")%>
</body>
</html>